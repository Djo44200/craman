<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>craman</display-name>
	<welcome-file-list>


	<welcome-file>home.html</welcome-file>


	</welcome-file-list>
	
	<servlet>
		<description></description>
		<display-name>AfficherErreur</display-name>
		<servlet-name>AfficherErreur</servlet-name>
		<jsp-file>/WEB-INF/erreur/erreur.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>AfficherErreur</servlet-name>
		<url-pattern>/erreurPage</url-pattern>
	</servlet-mapping>

	<servlet>
		
	<servlet-name>RestApplication</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
        <param-name>jersey.config.server.provider.packages</param-name>
        <param-value>com.expandium.rest</param-value>
    </init-param>
    
    <load-on-startup>1</load-on-startup>
    
	</servlet>
	
	
	
</web-app>